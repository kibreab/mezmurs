<!DOCTYPE html>
<html>
<head>
  <title>mezmurs</title>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript" charset="utf-8"></script>
  <%= stylesheet_link_tag    "application", 'https://fonts.googleapis.com/css?family=Raleway:500,600,700,800,900,400,200,300' %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= nav_bar fixed: :top, brand: "m e z m u r s . c o m ", responsive: true do %>
    <%= menu_group pull: :right do %>
        <% if current_user %>
        	<%= drop_down current_user.email do %>
        		<%= menu_item "Edit", "" %>
        		<%= link_to "Logout", destroy_user_session_path, :method => :delete %>
        	<% end %>
            
            
        <% else %>
			<%= content_tag :a, "Login", href: "#modal", class: 'btn', data: {toggle: 'modal'} %>
        <% end %>
    	<%= menu_item "About Us", "about_us_path" %>
    	<%= menu_item "Contact", "contact_path" %>        
    <% end %>
<% end %>


<%= yield %>
<div id="loading"></div>

<%= modal_dialog id: "modal",
         header: { show_close: true, dismiss: 'modal', title: 'Modal header' },
         body:   { content: 'Please login' },
         footer: { content: content_tag(:button, 'Log in', class: 'btn') } %>
<%= nav_bar static: :bottom do %>
    <% menu_group do %>
        <%= menu_item "Home", root_path %>
        <%= menu_item "About Us", "about_us_path" %>
        <%= menu_item "Contact", "contact_path" %>
    <% end %>
    <% menu_group pull: :right do %>
        <%= menu_item "Edit Profile", "edit_user_path(current_user)" %>
        <%= menu_item "Account Settings", "edit_user_account_path(current_user, @account)" %>
        <%= menu_item "Log Out", "log_out_path" %>
    <% end %>
<% end %>

</body>
</html>
